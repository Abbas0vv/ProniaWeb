@using Pronia.Database.Models
@model List<Product>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Pot List</title>

	<!-- Bootstrap CDN -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- Your CSS -->
	<link rel="stylesheet" href="~/admin/assets/css/index.css">
</head>
<body>
	<div class="container mt-5">
		<!-- Header -->
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h2 class="text-success">Pot List</h2>
			<a asp-controller="Product" asp-action="Add" class="btn btn-success btn-lg rounded-3">Create New Pot</a>
		</div>

		<!-- Table -->
		<div class="card shadow rounded-4 border-0">
			<div class="card-body">
				<table class="table table-hover align-middle">
					<thead class="table-success">
						<tr>
							<th>ID</th>
							<th>Title</th>
							<th>Price</th>
							<th>Description</th>
							<th class="text-center">Actions</th>
						</tr>
					</thead>
					<tbody>
						<!-- Example Pot -->
						<tr>
							<td>1</td>
							<td>Clay Pot</td>
							<td>₺50</td>
							<td>Traditional handmade clay pot</td>
							<td class="text-center">
								<a asp-controller="product" asp-action="update" class="btn btn-warning btn-sm rounded-3 px-3 me-2">Update</a>
								<a asp-controller="product" asp-action="delete" class="btn btn-danger btn-sm rounded-3 px-3">Delete</a>
							</td>
						</tr>

						<!-- More pots can be dynamically added here -->
					</tbody>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Id</td>
								<td>@item.Name</td>
								<td>₺@item.Price</td>
								<td>@item.Description</td>
								<td class ="text-center d-flex justify-content-center">
									<a asp-controller="product" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning btn-sm rounded-3 px-3 me-2">Update</a>
									<form asp-controller="product" asp-action="delete" method="post">
										<input type="hidden" name="id" value="@item.Id" />
										<button type="submit" class="btn btn-danger btn-sm rounded-3 px-3">Delete</button>
									</form>

								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>
</html>
