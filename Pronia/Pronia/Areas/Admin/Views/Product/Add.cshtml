@using Pronia.Database.Models
@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Pot</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Your CSS file -->
    <link rel="stylesheet" href="~/admin/assets/css/add.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow rounded-4 border-0" style="background-color: #f5fdf6;">
            <div class="card-header bg-success text-white rounded-top-4">
                <h3 class="mb-0">Add New Pot</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Product" asp-action="Add" method="post">
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="title" class="form-label text-success fw-bold">Title</label>
                        <input type="text" class="form-control rounded-3" name="Name" id="title" placeholder="Enter pot name" />
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label for="price" class="form-label text-success fw-bold">Price</label>
                        <input type="number" class="form-control rounded-3" name="Price" id="price" placeholder="$" />
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label text-success fw-bold">Description</label>
                        <textarea class="form-control rounded-3" id="description" name="Description" rows="4" placeholder="Information about the pot"></textarea>
                    </div>

                    <!-- Image Selection -->
                    <div class="mb-3">
                        <label class="form-label text-success fw-bold">Select Image</label>
                        <div class="d-flex flex-wrap gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="productImage" id="img1" value="1-1-270x300.jpg">
                                <label class="form-check-label" for="img1">
                                    <img src="~/admin/assets/images/website-images/1-1-270x300.jpg" alt="Pot 1" width="100" class="border rounded-3">
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="productImage" id="img2" value="1-2-270x300.jpg">
                                <label class="form-check-label" for="img2">
                                    <img src="~/admin/assets/images/website-images/1-2-270x300.jpg" alt="Pot 2" width="100" class="border rounded-3">
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="productImage" id="img3" value="1-3-270x300.jpg">
                                <label class="form-check-label" for="img3">
                                    <img src="~/admin/assets/images/website-images/1-3-270x300.jpg" alt="Pot 3" width="100" class="border rounded-3">
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="productImage" id="img4" value="1-4-270x300.jpg">
                                <label class="form-check-label" for="img3">
                                    <img src="~/admin/assets/images/website-images/1-4-270x300.jpg" alt="Pot 4" width="100" class="border rounded-3">
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="productImage" id="img5" value="1-5-270x300.jpg">
                                <label class="form-check-label" for="img3">
                                    <img src="~/admin/assets/images/website-images/1-5-270x300.jpg" alt="Pot 5" width="100" class="border rounded-3">
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success btn-lg rounded-3 px-4">Add</button>
                    <!-- Back to List Button -->
                    <a asp-controller="product" asp-action="index" class="btn btn-secondary btn-lg rounded-3 px-4 ms-2">← Back to List</a>

                </form>
            </div>
        </div>
    </div>
</body>
</html>
