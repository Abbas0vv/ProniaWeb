@using Pronia.Database.Models
@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Pot</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Your CSS file -->
    <link rel="stylesheet" href="~/admin/assets/css/add.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow rounded-4 border-0" style="background-color: #f5fdf6;">
            <div class="card-header bg-success text-white rounded-top-4">
                <h3 class="mb-0">Add New Pot</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
                    <!-- Title -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-success fw-bold">Title</label>
                        <input type="text" class="form-control rounded-3" asp-for="Name" id="title"/>
                        <span asp-for="Name" asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label text-success fw-bold">Price</label>
                        <input type="number" class="form-control rounded-3" asp-for="Price" id="price" placeholder="$" />
                        <span asp-for="Price" asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label text-success fw-bold">Description</label>
                        <textarea class="form-control rounded-3" id="description" asp-for="Description" rows="4" placeholder="Information about the pot"></textarea>
                        <span asp-for="Description" asp-validation-for="Description" class="text-danger"></span>

                    </div>

                    <!-- Image Selection -->
                    <div class="mb-3">
                        <label asp-for="File" class="form-label text-success fw-bold">Image</label>
                        <input type="File" class="form-control rounded-3" asp-for="File" id="File"/>
                        <span asp-for="File" asp-validation-for="File" class="text-danger"></span>

                    </div>

                    <!-- Category -->
                    <div class="mb-3">
                        <label for="categoryId" class="form-label text-success fw-bold">Category</label>
                        <select asp-for="CategoryId" class="form-select rounded-3" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            <option disabled selected>-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success btn-lg rounded-3 px-4">Add</button>
                    <!-- Back to List Button -->
                    <a asp-controller="product" asp-action="index" class="btn btn-secondary btn-lg rounded-3 px-4 ms-2">← Back to List</a>

                </form>
            </div>
        </div>
    </div>
</body>
</html>
