@using Pronia.Database.Models
@model List<SlideBanner>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Slide Banner List</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Bootstrap CDN -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- Optional: Your custom CSS -->
	<link rel="stylesheet" href="~/admin/assets/css/index.css">
</head>
<body>
	<div class="container mt-5">
		<!-- Header -->
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h2 class="text-success">Slide Banner List</h2>
			<a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary btn-lg rounded-3">Back to Dashboard</a>
			<a asp-controller="SlideBanner" asp-action="Add" class="btn btn-success btn-lg rounded-3">Create New Slide Banner</a>
		</div>

		<!-- Table -->
		<div class="card shadow rounded-4 border-0">
			<div class="card-body">
				<table class="table table-hover align-middle">
					<thead class="table-success">
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Description</th>
							<th>Offer</th>
							<th>Image</th>
							<th class="text-center">Actions</th>
						</tr>
					</thead>
					<tbody>
						@{
							int counter = 1;
						}
						@foreach (var item in Model)
						{
							<tr>
								<td>@counter</td>
								<td>@item.Title</td>
								<td>@item.Description</td>
								<td>@item.Offer</td>
								<td>
									<img src="~/Upload/SlideBanner/@item.ImageUrl"
										 alt="Banner Image"
										 style="width: 100px; height: auto; border-radius: 8px;" />
								</td>
								<td class="text-center">
									<div class="d-flex justify-content-center gap-2">
										<a asp-controller="SlideBanner" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm px-3 rounded-3">Update</a>
										<form asp-controller="SlideBanner" asp-action="Delete" method="post">
											<input type="hidden" name="id" value="@item.Id" />
											<button type="submit" class="btn btn-danger btn-sm px-3 rounded-3">Delete</button>
										</form>
									</div>
								</td>
							</tr>
							counter++;
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>
</html>
