@model Pronia.Database.Models.SlideBanner

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Update Slide Banner</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Your CSS file (if you have one for admin UI) -->
    <link rel="stylesheet" href="~/admin/assets/css/add.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow rounded-4 border-0" style="background-color: #f5fdf6;">
            <div class="card-header bg-success text-white rounded-top-4">
                <h3 class="mb-0">Update Slide Banner</h3>
            </div>
            <div class="card-body">
                <form asp-controller="SlideBanner" asp-action="Update" method="post">
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="Title" class="form-label text-success fw-bold">Title</label>
                        <input type="text" name="Title" class="form-control rounded-3" placeholder="Enter banner title" value="@Model.Title" />
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="Description" class="form-label text-success fw-bold">Description</label>
                        <input type="text" name="Description" class="form-control rounded-3" placeholder="Enter banner description" value="@Model.Description" />
                    </div>

                    <!-- Offer -->
                    <div class="mb-3">
                        <label for="Offer" class="form-label text-success fw-bold">Offer</label>
                        <input type="text" name="Offer" class="form-control rounded-3" placeholder="Enter banner offer" value="@Model.Offer" />
                    </div>

                    <!-- Submit and Back Buttons -->
                    <button type="submit" class="btn btn-success btn-lg rounded-3 px-4">Save</button>
                    <a asp-controller="SlideBanner" asp-action="Index" class="btn btn-secondary btn-lg rounded-3 px-4 ms-2">← Back to List</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
