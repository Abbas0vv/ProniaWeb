@model Pronia.Database.Models.SlideBanner

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Create Slide Banner</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Your CSS file -->
    <link rel="stylesheet" href="~/admin/assets/css/add.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow rounded-4 border-0" style="background-color: #f5fdf6;">
            <div class="card-header bg-success text-white rounded-top-4">
                <h3 class="mb-0">Create New Slide Banner</h3>
            </div>
            <div class="card-body">
                <form asp-controller="SlideBanner" asp-action="Add" method="post" enctype="multipart/form-data">
                    <!-- Title -->
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label text-success fw-bold">Title</label>
                        <input asp-for="Title" class="form-control rounded-3" placeholder="Enter banner title" />
                        <span asp-for="Name" asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label text-success fw-bold">Description</label>
                        <input asp-for="Description" class="form-control rounded-3" placeholder="Enter banner description" />
                        <span asp-for="Description" asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Offer -->
                    <div class="mb-3">
                        <label asp-for="Offer" class="form-label text-success fw-bold">Offer</label>
                        <input asp-for="Offer" class="form-control rounded-3" placeholder="Enter banner offer" />
                        <span asp-for="Offer" asp-validation-for="Offer" class="text-danger"></span>
                    </div>
                     <!--Image-->
                    <div class="mb-3">
                        <label asp-for="File" class="form-label text-success fw-bold">Image</label>
                        <input type="file" asp-for="File" class="form-control rounded-3" placeholder="Enter banner offer" />
                        <span asp-for="File" asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <!-- Submit and Back Buttons -->
                    <button type="submit" class="btn btn-success btn-lg rounded-3 px-4">Create</button>
                    <a asp-controller="SlideBanner" asp-action="Index" class="btn btn-secondary btn-lg rounded-3 px-4 ms-2">← Back to List</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
