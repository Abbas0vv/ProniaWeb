@using Pronia.ViewModels.Account
@model LoginViewModel

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"> </div>
            <div class="col-lg-8">
                <form method="Post">
                    <div class="login-form">
                        <h4 class="login-title">Login</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="Email">Email Address</label>
                                <input type="email" asp-for="Email" placeholder="Email Address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password">Password</label>
                                <input type="password" asp-for="Password" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Login
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>